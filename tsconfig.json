{
  "compilerOptions": {
    "outDir": "dist", // Specifies where to put the compiled JavaScript
    "target": "ES2020", // Use modern JavaScript features
    "module": "CommonJS", // Use CommonJS module system for Node.js
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Compatibility for CommonJS modules
    "skipLibCheck": true // Skip checking library files for faster compilation
  },
  "include": [
    "index.ts",
    "src/**/*"
  ], // Include the root index.ts and all files in src/
  "exclude": [
    "node_modules"
  ] // Exclude node_modules folder
}